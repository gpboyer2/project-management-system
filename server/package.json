{
  "name": "seasaver_server",
  "version": "1.0.0",
  "description": "通信监控网络规划-服务端",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon",
    "lint": "eslint \"**/*.js\"",
    "lint:fix": "eslint \"**/*.js\" --fix",
    "pm2:dev": "cross-env NODE_ENV=development pm2 start server.js",
    "pm2:prod": "cross-env NODE_ENV=production pm2 start server.js",
    "node:dev": "cross-env NODE_ENV=development node server.js",
    "node:prod": "cross-env NODE_ENV=production node server.js",
    "test": "cross-env NODE_ENV=test node test/api/runner.js",
    "test:auth": "cross-env NODE_ENV=test node test/api/runner.js --module=auth",
    "build": "babel . -d dist --ignore node_modules,dist,logs,data,coverage",
    "dist": "pkg . --out-path=dist/ --targets=node18-win-x64,node18-macos-x64,node18-linux-x64 --compress GZip",
    "dist:win": "pkg . --out-path=dist/ --targets=node18-win-x64 --compress GZip",
    "dist:mac": "pkg . --out-path=dist/ --targets=node18-macos-x64 --compress GZip",
    "dist:linux": "pkg . --out-path=dist/ --targets=node18-linux-x64 --compress GZip"
  },
  "author": "YJX",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "chalk": "^4.1.2",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "madge": "^8.0.0",
    "mockjs": "^1.1.0",
    "nodemon": "^3.1.11",
    "playwright": "^1.57.0",
    "pm2": "^6.0.13"
  },
  "dependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/register": "^7.24.6",
    "@libsql/client": "^0.17.0",
    "archiver": "^7.0.1",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.4.6",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.19",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "http-proxy": "^1.18.1",
    "iconv-lite": "^0.6.3",
    "jsonwebtoken": "^9.0.2",
    "jszip": "^3.10.1",
    "lodash": "^4.17.21",
    "log4js": "^6.9.1",
    "moment": "^2.30.1",
    "multer": "^2.0.2",
    "nats": "^2.28.2",
    "pkg": "^5.8.1",
    "sequelize": "^6.32.1",
    "serve-favicon": "^2.5.1",
    "socket.io": "^4.7.2",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^7.0.3"
  }
}
