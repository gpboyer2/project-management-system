# ========================================
# 测试环境配置
# ========================================
# 测试环境使用，与开发环境端口隔离

# 运行环境: development | production | test
NODE_ENV=test

# 认证绕过（测试环境可开启）
BYPASS_AUTH=true

# 测试模式下的账号凭证
TEST_USERNAME=admin
TEST_PASSWORD=admin123

# JWT 配置
JWT_SECRET=test-secret-key
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# 前后端 Http（运行时注入，必须以 VITE_ 开头）：几个端口相同，用途不同，请勿删除任一
VITE_API_PORT=9558 # 后端服务端口
VITE_API_HOST=localhost # 后端服务主机
VITE_API_BASE_URL=http://localhost:9558/api

# 前端静态服务端口
VITE_FRONTEND_PORT=9300 

# 前后端 WebSocket 配置：几个端口相同，用途不同，请勿删除任一
VITE_WS_PORT=9559           # websocket监听端口（server/etc/config.js 读取）
VITE_WS_HOST=localhost      # websocket服务主机
VITE_WS_URL=ws://localhost:9559   # 前端连接地址（浏览器连接用）

# 日志配置
# 日志级别: debug | info | warn | error
LOG_LEVEL=info
LOG_PATH=./logs

# 文件上传配置
MAX_FILE_UPLOAD_SIZE=10485760
UPLOAD_ALLOWED_EXT=.json,.xml,.txt,.csv
